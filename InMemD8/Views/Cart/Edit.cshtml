@model CartItemEditViewModel




<div>
    <form asp-action="Edit" asp-controller="Cart" method="post">
        <h1>@Model.CartItem.Name</h1>
        <input asp-for="CartItem.Id" type="hidden"/>
        @for(var i = 0; i < Model.CartItem.Ingredients.Count; i++)
        {
            <label>@Model.CartItem.Ingredients[i].Name</label>
            <input asp-for="@Model.CartItem.Ingredients[i].Selected" type="checkbox"/>
            <input asp-for="@Model.CartItem.Ingredients[i].Id" type="hidden" value="@Model.CartItem.Ingredients[i].Id" />
            <input asp-for="@Model.CartItem.Ingredients[i].Name" type="hidden" value="@Model.CartItem.Ingredients[i].Name" />
            <input asp-for="@Model.CartItem.Ingredients[i].Included" type="hidden"/>
        }
        @for (int i = 0; i < Model.Extras.Count; i++)
        {
            <label>@Model.Extras[i].Name</label>
            <input asp-for="@Model.Extras[i].Selected" type="checkbox" />
            <input asp-for="@Model.Extras[i].Id" type="hidden" value="@Model.Extras[i].Id" />
            <input asp-for="@Model.Extras[i].Name" type="hidden" value="@Model.Extras[i].Name" />
            <input asp-for="@Model.Extras[i].Price" type="hidden" value="@Model.Extras[i].Price" />
            <input asp-for="@Model.Extras[i].Included" type="hidden"/>
        }
        <button type="submit">Skicka</button>
    </form>
</div>







